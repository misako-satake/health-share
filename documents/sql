
CREATE DATABASE hsdb;


CREATE TABLE users(
u_id serial,
group_id INTEGER UNIQUE,
user_name text NOT NULL UNIQUE,
target_weight REAL NOT NULL,
carent_weight REAL NOT NULL
);

CREATE TABLE group_id(
g_id INTEGER NOT NULL UNIQUE,
group_name text NOT NULL
);

CREATE TABLE user_group_ids(
j_user_id INTEGER,
j_group_id INTEGER,
foreign key (j_user_id) references users(group_id),
foreign key (j_group_id) references group_id(g_id)
);

CREATE TABLE dairy_record(
d_id serial,
record_date date NOT NULL UNIQUE,
user_name text NOT NULL,
mo_weight REAL,
ni_weight REAL,
mo_fat REAL,
ni_fat REAL,
mo_meal text,
day_meal text,
ni_meal text,
exercise text,
comment_id INTEGER UNIQUE
);

CREATE TABLE comment(
c_id INTEGER NOT NULL,
comment text,
foreign key (c_id) references dairy_record(comment_id)
);